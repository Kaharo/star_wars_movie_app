<!doctype html>
<html lang="en">
  <head>

    <% include partials/head.ejs %>

  </head>
  <body>

    <% include partials/header.ejs %>

    <div id="hero-image-single" style="background-image: url('/images/<%= movie.hero_image %>')">
      <h1 id="hero-title"><%= title %></h1>
    </div>

    <div class="content-padding clear fix">
      <div class="poster-wrapper">
        <img src="/images/<%= movie.poster %>" class="img-responsive"/>
      </div>
    </div>

    <div class="description-wrapper">
      <div class="description">
        <h2 class="movie-hrader">Description</h2>
        <p><%= movie.description %></p>
      </div>

      <div class="main_characters">
        <h2 class="movie-hrader">Main Characters</h2>
        <ul>
          <% for (var i=0; i<main_characters.length; i++) { %>
          <li><%= main_characters[i] %></li>
          <% } %>
          </main_characters.length;>}
        </ul>
      </div>
    </div>

    <% include partials/footer.ejs %>

    <% include partials/scripts.ejs %>
  </body>
</html>
